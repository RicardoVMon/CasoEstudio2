@model CasoEstudio2.Models.CasasModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <h1 class="text-center mb-3">Formulario de Registro Abonos a Compras</h1>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8 bg-white p-5">



            @using (Html.BeginForm("AlquilerCasa", "Casas"))
            {

                if (ViewBag.Mensaje != null)
                {
                    <div class="alert alert-info text-center" role="alert">
                        @ViewBag.Mensaje
                    </div>
                }
                <div class="row">
                    <div class="form-group col-12">
                        <label class="form-label">Casas disponibles</label>
                        @Html.DropDownListFor(m => m.IdCasa, ViewBag.Casas as List<SelectListItem>, new { @class = "form-control", @onchange = "mostrarPrecio(this.value)", @required = "true"})
                    </div>
                    <div class="form-group mb-3 col-8">
                        <label class="form-label">Precio de Casa</label>
                        <input type="text" class="form-control" id="PrecioCasa" name="PrecioCasa" placeholder="Seleccione una casa para mostrar su precio" readonly>
                    </div>
                    <div class="mb-3 col-8">
                        <label class="form-label">Información de usuario</label>
                        @Html.TextBoxFor(m => m.UsuarioAlquiler, new { @class = "form-control", @placeholder = "Ingrese su información para el alquiler", @required = "true", @id = "precioCasa" })
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary w-100">Procesar</button>
                    </div>
                </div>

            }
        </div>
        <div class="col-2"></div>
    </div>
</div>

<script src="~/Resources/js/mostrarPrecio.js"></script>
